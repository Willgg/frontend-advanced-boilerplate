    <script>
    $(document).ready( function(){

      function getHeight() {
        if (self.innerHeight) {
          return self.innerHeight;
        }
        if (document.documentElement && document.documentElement.clientHeight) {
          return document.documentElement.clientHeight;
        }
        if (document.body) {
          return document.body.clientHeight;
        }
      };
      // switch entre les 2 programmes
      $('.selector').on('click', 'a', function(e) {
        e.preventDefault();
        $('.selector a').removeClass("selected");
        $(this).addClass("selected");
        var data = $(this).data("select");
        $(" [data-type] ").hide();
        $('[data-type="' + data + '"]').show();
        if ($(document).innerWidth() > 768) {
          var image = $('[data-type="' + data + '"] .day-picture').first().css("background-image");
          $('#timeline').css("background-image", image)
        }
      });

      $('.day').hover( function(){
        $(this).children('.day-hour').addClass('day-hour-hover');
        $(this).children('.day-desc').addClass('day-desc-hover');
        if ($(document).innerWidth() > 768) {
          var pic = $(this).children('.day-picture').css('background-image');
          $('#timeline').css('background-image', pic);
        }
      }, function() {
        $('.day-hour').removeClass('day-hour-hover');
        $('.day-desc').removeClass('day-desc-hover');
      });

      $(document).scroll(function () {
          var y = $(this).scrollTop();
          if (y > 400) {
              $('.scroll-menu').fadeIn();
          } else {
              $('.scroll-menu').fadeOut();
          }
      });

      if ($(document).innerWidth() <= 768) {
        $('#timeline').removeAttr('style');
      }

    });

